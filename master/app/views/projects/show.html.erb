<p id="notice"><%= notice %></p>
<p>
  <strong>Project Name:</strong>
  <%= @project.name %>
</p>
<p> <strong> Success Conditions: </strong>
  <ul>
    <% for succ_con in @project.success_conditions %>
    <%= content_tag("li", succ_con.description) %>
    <% end %>
  </ul>
</p>
<p> <strong> Tasks: </strong>
  <ul>
    <% @tasks.each do |task| %>
    <%=content_tag("li", task.description, class: task.status)%>
    <%=select_tag("status", options_for_select(Task.status_attributes_for_select), :onchange => 'updateTaskStatus(this)')%>
    <% end %>
  </ul>
</p>
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
