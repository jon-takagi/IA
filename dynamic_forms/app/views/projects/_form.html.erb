<%= javascript_include_tag 'application' %>
<%= form_for(@project) do |f| %>
<%= render 'display_errors' %>
<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<h3> Success Conditions: </h3>
<ul id="conditions">
<%= f.fields_for :success_conditions do |builder| %>
<li>
  <%=builder.label :description, "Description" %>
  <%=builder.text_field :description %>
  <%=builder.hidden_field :_destroy %>
  <%= link_to "remove", '#', :onclick => 'remove_fields(this)'%>
</li>

<% end %>

</ul>
<%= link_to "Add Success Conditions", '#', onclick: 'add_fields(this)' %>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
